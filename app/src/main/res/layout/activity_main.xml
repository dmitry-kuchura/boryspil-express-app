<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/imageHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/express_background"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/imageTrainOutline"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_outline"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_train"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorWhite"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/boryspil_express"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageTrainOutline"
            app:layout_constraintStart_toEndOf="@+id/imageTrainOutline"
            app:layout_constraintTop_toTopOf="@+id/imageTrainOutline"/>

    <TextView
            android:id="@+id/textTrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:shadowColor="@color/colorTextPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="@string/traveling"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageHeader"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:shadowColor="@color/colorTextPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="@string/from"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintBottom_toBottomOf="@id/textTrain"
            app:layout_constraintStart_toEndOf="@id/textTrain"
            app:layout_constraintTop_toTopOf="@id/textTrain"/>

    <TextView
            android:id="@+id/textWhereAreYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorTextPrimary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="@string/where_are_you"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintBottom_toTopOf="@id/textTrain"
            app:layout_constraintStart_toStartOf="@id/textTrain"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/imageHeader"
            app:layout_constraintTop_toBottomOf="@id/imageHeader">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_location"
                    app:tint="@color/colorTextHint"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@null"
                    android:hint="@string/enter_your_departure"
                    android:inputType="text"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_13ssp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:id="@+id/imageRightArrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/colorTextPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSearch"/>

    <TextView
            android:id="@+id/textAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/imageRightArrow"
            app:layout_constraintEnd_toStartOf="@id/imageRightArrow"
            app:layout_constraintTop_toTopOf="@id/imageRightArrow"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/upcoming_trips"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageRightArrow"
            app:layout_constraintEnd_toStartOf="@id/textAll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageRightArrow"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardTripsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/imageRightArrow">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">

            <TextView
                    android:id="@+id/textTripDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_6_nov_09_40"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/departureTrafficHub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Киев"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textTripDate"/>

            <TextView
                    android:id="@+id/departureTrafficHubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Центральный ж\д вокзал"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departureTrafficHub"/>


            <TextView
                    android:id="@+id/textTripTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:20"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/arrivalTrafficHub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Борисполь"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textTripTime"/>

            <TextView
                    android:id="@+id/arrivalTrafficHubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Международный аэропорт"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/arrivalTrafficHub"/>

            <View
                    android:id="@+id/viewLine"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="2dp"
                    android:background="@color/colorTextHint"
                    app:layout_constraintBottom_toBottomOf="@id/arrivalTrafficHub"
                    app:layout_constraintEnd_toStartOf="@id/arrivalTrafficHub"
                    app:layout_constraintStart_toEndOf="@id/departureTrafficHub"
                    app:layout_constraintTop_toTopOf="@id/departureTrafficHub"/>

            <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_train"
                    app:layout_constraintBottom_toBottomOf="@id/viewLine"
                    app:layout_constraintEnd_toEndOf="@id/viewLine"
                    app:layout_constraintStart_toStartOf="@id/viewLine"
                    app:layout_constraintTop_toTopOf="@id/viewLine"
                    app:tint="@color/colorTextPrimary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textPopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/popular"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cardTripsList"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintTop_toBottomOf="@id/textPopular">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vydubychi"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorTextPrimary"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="@string/vydubychi"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kyiv"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorTextPrimary"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="@string/kyiv"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/darnitsa"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorTextPrimary"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="@string/darnitsa"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>
            </FrameLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <me.ibrahimsn.lib.SmoothBottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:backgroundColor="@color/colorBackground"
            app:iconSize="@dimen/_22sdp"
            app:iconTint="@color/colorTextPrimary"
            app:iconTintActive="@color/colorWhite"
            app:indicatorColor="@color/colorSelectedMenu"
            app:indicatorRadius="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu_navigation"
            app:textColor="@color/colorWhite"
            app:textSize="@dimen/_12ssp"/>

</androidx.constraintlayout.widget.ConstraintLayout>